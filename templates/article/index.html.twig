{% extends 'base.html.twig' %}

{% block title %}Article index
{% endblock %}

{% block body %}
	<div class="container">
        <a class="btn btn-success m-3" href="{{ path('article_new') }}">Create new</a>
        <table class="table">
            <thead>
                <tr>
                    <th>Titre</th>
                    <th>Date De Creation</th>
                    <th>Texte</th>
                    <th>Photo</th>
                    <th>Slug</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
                {% for article in articles %}
                    <tr>
                        <td>{{ article.titre }}</td>
                        <td>{{ article.dateDeCreation ? article.dateDeCreation|date('Y-m-d') : '' }}</td>
                        <td>{{ article.texte }}</td>
                        <td>{{ article.photo }}</td>
                        <td>{{ article.slug }}</td>
                        <td>
                            <a class="btn btn-primary" href="{{ path('article_show', {'id': article.id}) }}">show</a>
                            <a class="btn btn-success" href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7">no records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
		
	</div>

{% endblock %}
