{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
<div class="col-6 offset-3 mb-5">
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ article.titre }}</td>
            </tr>
            <tr>
                <th>DateDeCreation</th>
                <td>{{ article.dateDeCreation ? article.dateDeCreation|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ article.texte }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td><img src="{{ article.photo }}" alt="photo"></td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ article.slug }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('article_index') }}">back to list</a>
    {{ include('article/_delete_form.html.twig') }}
    <div class="float-right">
        <a class="btn btn-success" href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
    </div>
    
    

</div>
    
{% endblock %}
