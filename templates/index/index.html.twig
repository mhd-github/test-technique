{% extends 'base.html.twig' %}

{% block title %}Hello IndexController!{% endblock %}

{% block body %}
    <div class="container">
        <div class="row mb-2">
            <!-- Liste des articles du blog -- DEBUT -->
            {% for article in articles %}
                <div class="col-md-6">
                    <div class="card flex-md-row mb-4 box-shadow h-md-250">
                        <div class="card-body d-flex flex-column align-items-start">
                            <h3 class="mb-0">
                                <a class="text-dark" href="#">{{article.titre}}</a>
                            </h3>
                            <div class="mb-1 text-muted">{{article.dateDeCreation |date('M Y')}}</div>
                            <p class="card-text mb-auto" >{{article.texte}} </p>
                            <a href="article.html">Continue reading</a>
                        </div>
                        <img class="card-img-right flex-auto d-none d-md-block" src="{{article.photo}}"
                            alt="Card image cap">
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
